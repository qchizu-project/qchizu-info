---
import Base from './Base.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Sidebar from '../components/Sidebar.astro';

interface Props {
  title: string;
  description: string;
  date: Date;
  type?: 'page' | 'guide' | 'post';
  slug?: string;
}

const { title, description, date, type = 'post', slug } = Astro.props;

const formatDate = (date: Date) => {
  return date.toLocaleDateString('ja-JP', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};
---

<Base title={title} description={description}>
  <Header />
  <div class="page-layout">
    <Sidebar currentSlug={slug} />
    <main>
      <article class={`article article-${type}`}>
        <header class="article-header">
          {type === 'post' && (
            <time class="date-prominent" datetime={date.toISOString()}>
              {formatDate(date)}
            </time>
          )}
          <h1>{title}</h1>
          {type === 'guide' && (
            <time class="date-subtle" datetime={date.toISOString()}>
              更新: {formatDate(date)}
            </time>
          )}
        </header>
        <div class="article-content">
          <slot />
        </div>
        {type === 'guide' && (
          <footer class="article-footer">
            <time datetime={date.toISOString()}>
              最終更新: {formatDate(date)}
            </time>
          </footer>
        )}
      </article>
    </main>
  </div>
  <Footer />
</Base>

<style>
  .page-layout {
    display: flex;
    max-width: var(--max-width-with-sidebar);
    margin: 0 auto;
    padding: 2rem 1rem;
    gap: 2rem;
  }

  .page-layout :global(main) {
    flex: 1;
    max-width: none;
    margin: 0;
    padding: 0;
    min-width: 0;
  }

  .article-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--theme-color);
  }

  .article-header h1 {
    font-size: 1.6rem;
    line-height: 1.4;
    margin: 0;
    padding: 0;
    background: none;
    border: none;
    color: #333;
  }

  /* post: 日付を目立たせる */
  .date-prominent {
    display: block;
    font-size: 1rem;
    font-weight: bold;
    color: var(--theme-color);
    margin-bottom: 0.5rem;
  }

  /* guide: 日付を控えめに */
  .date-subtle {
    display: block;
    font-size: 0.8rem;
    color: #999;
    margin-top: 0.5rem;
  }

  /* page: 日付なし（CSSで特別なスタイルは不要） */

  .article-content {
    line-height: 1.8;
  }

  .article-footer {
    margin-top: 3rem;
    padding-top: 1rem;
    border-top: 1px solid #eee;
    color: #999;
    font-size: 0.85rem;
  }

  .article-content :global(pre) {
    background-color: #f5f5f5;
    padding: 1rem;
    border-radius: 4px;
    overflow-x: auto;
    margin-bottom: 1.4em;
  }

  .article-content :global(code) {
    font-family: "SFMono-Regular", Consolas, "Liberation Mono", Menlo, monospace;
    font-size: 0.875em;
  }

  .article-content :global(blockquote) {
    border-left: 4px solid var(--theme-color);
    padding-left: 1rem;
    margin: 1.4em 0;
    color: #666;
  }

  .article-content :global(img) {
    margin: 0.5rem 0;
  }

  .article-content :global(table) {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 1.4em;
  }

  .article-content :global(th),
  .article-content :global(td) {
    border: 1px solid #ddd;
    padding: 0.5rem;
    text-align: left;
  }

  .article-content :global(th) {
    background-color: #f5f5f5;
  }

  /* モバイル対応 */
  @media (max-width: 768px) {
    .page-layout {
      flex-direction: column;
    }
  }
</style>
